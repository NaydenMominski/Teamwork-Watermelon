 <div class="main-container col2-left-layout">
            <div class="main container">
                <div class="row">
                    <section class="col-sm-9 col-sm-push-3">
                        <div class="col-main">
                            <div class="category-title">
                                <h1>All Books</h1>
                            </div>
                            <div class="category-description std">
                                <div class="slider-items-products">
                                    <div id="category-desc-slider" class="product-flexslider hidden-buttons">

                                    </div>
                                </div>
                            </div>
                            <div class="category-products">
                                <div class="toolbar">

                                    <div id="sort-by">
                                        <label class="left">Sort By: </label>
                                        <ul>
                                            <li><a href="#">Sorting<span class="right-arrow"></span></a>
                                                <ul>
                                                    {{#queries}}
                                                      {{#if query}}
                                                    <li><a href="#/books/{{query}}?sortBy=title">Title a-z </a></li>
                                                    <li><a href="#/books/{{query}}?sortBy=titledesc">Title z-a</a></li>
                                                    <li><a href="#/books/{{query}}?sortBy=price">Lowest price</a></li>
                                                    <li><a href="#/books/{{query}}?&sortBy=pricedesc">Highest price</a></li>
                                                       {{else}} 
                                                    <li><a href="#/books?sortBy=title">Title a-z </a></li>
                                                    <li><a href="#/books?sortBy=titledesc">Title z-a</a></li>
                                                    <li><a href="#/books?sortBy=price">Lowest price</a></li>
                                                    <li><a href="#/books?&sortBy=pricedesc">Highest price</a></li> 
                                                      {{/if}}
                                                    {{/queries}}                                           
                                                </ul>
                                            </li>
                                        </ul>
                        
                                        </div>
                                        <div class="pager">
                                        <div id="limiter">
                                            <label>View: </label>
                                            <ul> 
                                                <li><a href="#">Size <span class="right-arrow"></span></a>
                                                     <ul>{{#queries}}
                                                         {{#if query}}
                                                        <li><a href="#/books/{{query}}?page=0&size=6&sortBy={{sortBy}}">6</a></li>
                                                        <li><a href="#/books/{{query}}?page=0&size=9&sortBy={{sortBy}}">9</a></li>
                                                        <li><a href="#/books/{{query}}?page=0&size=12&sortBy={{sortBy}}">12</a></li>
                                                         {{else}}
                                                        <li><a href="#/books?page=0&size=6&sortBy={{sortBy}}">6</a></li>
                                                        <li><a href="#/books?page=0&size=9&sortBy={{sortBy}}">9</a></li>
                                                        <li><a href="#/books?page=0&size=12&sortBy={{sortBy}}">12</a></li>
                                                        {{/if}}
                                                        {{/queries}}
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="pages">
                                            <label>Page:</label>
                                            <ul class="pagination">
                                                {{#pages}}
                                                {{#if query}}
                                                <li><a href="#/books/{{query}}?page={{page}}&size={{size}}&sortBy={{sortBy}}">{{displayPage}}</a></li>
                                                {{else}}
                                                 <li><a href="#/books?page={{page}}&size={{size}}&sortBy={{sortBy}}">{{displayPage}}</a></li>
                                                 {{/if}}
                                                {{/pages}}
                                               
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <ul id="products-image" class="products-grid">
                                    {{#books}}
                                    <li class="item col-lg-4 col-md-3 col-sm-4 col-xs-12">
                                        <div class="item-inner">
                                            <div class="product-block">
                                                <div id="product-image" class="product-image">
                                                    {{!--<a href="#">--}}
                                                        <figure data-creator="{{_acl.creator}}" data-id="{{_id}}" class="product-display">
                                                        {{#if url}}
                                                           <a href="#/book/{{_id}}">
                                                            <img  src="{{url}}" class="lazyOwl product-mainpic" alt="{{title}}" style="display: block;">
                                                            <img   class="product-secondpic" alt="{{title}}" src="{{url}}">
                                                         </a>
                                                         {{else}}
                                                          <a href="#/book/{{_id}}">
                                                            <img  src="../products-images/product1.jpg" class="lazyOwl product-mainpic" alt="{{title}}" style="display: block;">
                                                            <img   class="product-secondpic" alt="{{title}}" src="../products-images/product1.jpg">
                                                         </a>
                                                          {{/if}}
                                                        
                                                        </figure>
                                                    </a>
                                                </div>

                                            </div>
                                            <div class="item-info ">
                                                <div class="info-inner ">
                                                    <div class="item-title "> <a href="#" title="Retis lapen casen "> {{title}}</a> </div>
                                                    <div class="item-content ">

                                                        <div class="item-price ">
                                                            <div class="price-box "> <span class="regular-price "> <span class="price ">${{price}}</span> </span>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                 {{/books}}
                                </ul>
                            </div>
                        </div>
                    </section>
                    <aside class="col-left sidebar col-sm-3 col-xs-12 col-sm-pull-9 wow bounceInUp animated">
                        <div class="side-nav-categories">
                            <div class="block-title"> Categories </div>
                            <div class="box-content box-category">
                                <ul id="magicat">
                                    
                                    {{#category}}
                                    <li class="level0- level0 open"> <span class="magicat-cat"><a href="#/books/{{encodeCategory}}"><span>{{category}}</span></a>
                                        </span>

                                    </li>
                                    {{/category}}
                           
                                </ul>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>